{
  "name": "auth-module",
  "version": "1.0.0",
  "main": "index.js",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "init": "npm --clean install",
    "build": "npx tsc --build tsconfig.json",
    "typeorm:sync": "typeorm schema:sync -d dist/data-source.js",
    "seed": "node ./node_modules/typeorm-extension/bin/cli.cjs seed:run -d dist/database/data-source.js",
    "prod": "node dist/index.js",
    "start": "npm run typeorm:sync && npm run seed && npm run prod",
    "seed:dev": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs seed:run -d src/database/data-source.ts",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint . --fix",
    "typeorm": "typeorm-ts-node-esm -d ./ src/data-source.ts",
    "m:g": "ts-node ./node_modules/typeorm/cli.js migration:generate -n",
    "m:r": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "m:gen": "npm run typeorm migration:generate",
    "m:run": "npm run typeorm migration:run"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.19.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "express-session": "^1.17.3",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.3.17",
    "typeorm-extension": "^3.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.7.0",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.0.3",
    "ts-node": "10.7.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}